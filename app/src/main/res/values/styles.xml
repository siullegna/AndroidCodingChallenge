<resources>

    <style name="timesTitleStyle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="timesReviewerStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="errorHeaderStyle">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/error_header_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="errorSubHeaderStyle">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">@dimen/error_sub_header_text_size</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="emptyHeaderStyle">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">@dimen/empty_header_text_size</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="detailHeadlineStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="detailSummaryStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="detailStyle">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

</resources>
