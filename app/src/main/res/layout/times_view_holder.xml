<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/times_photo_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPhotoBackground">

            <com.hap.androidtimes.ui.widget.TimesDraweeView
                android:id="@+id/times_drawee_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ProgressBar
                android:id="@+id/times_loader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/times_info_container_padding">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/times_title"
                style="@style/timesTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/times_info_title_margin_bottom" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/times_reviewer"
                style="@style/timesReviewerStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>